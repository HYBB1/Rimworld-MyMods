	<RecipeDef ParentName="SurgeryBionic">
		<defName>InstallPowerArm</defName>
		<label>install power arm</label>
		<description>Installs power arm.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing power arm.</jobString>
		<workAmount>2000</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>PowerArm</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>PowerArm</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>LeftShoulder</li>
			<li>RightShoulder</li>
		</appliedOnFixedBodyParts>
		<addsHediff>PowerArm</addsHediff>
	</RecipeDef>

